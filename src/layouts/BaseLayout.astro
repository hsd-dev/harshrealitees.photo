---
import "../styles/global.css";
const { title = "My Photography" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{title}</title>
  <meta name="viewport" content="width=device-width" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body style="margin:0; overflow:hidden; background-color:#000; color:#fff; font-family:sans-serif;">

  <!-- Top-left title -->
  <a href="/" style="
    position: absolute;
    top: 16px;
    left: 16px;
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    text-decoration: none;
  ">
    Harsh Realitees Photography
  </a>

  <!-- Optional top-right nav -->
  <nav style="
    position: absolute;
    top: 16px;
    right: 16px;
    display:flex;
    gap: 24px;
    font-weight:400;
    font-size:0.95rem;
  ">
    <a href="/" style="color:#fff; text-decoration:none;">Home</a>
    <a href="/gallery" style="color:#fff; text-decoration:none;">Gallery</a>
    <a href="/stories" style="color:#fff; text-decoration:none;">Stories</a>
    <a href="/video" style="color:#fff; text-decoration:none;">Video</a>
    <a href="/shop" style="color:#fff; text-decoration:none;">Shop</a>
    <a href="/contact" style="color:#fff; text-decoration:none;">Contact</a>
    <a href="/about" style="color:#fff; text-decoration:none;">About</a>
  </nav>

  <!-- Main page content -->
  <main>
    <slot />
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
</body>
</html>
