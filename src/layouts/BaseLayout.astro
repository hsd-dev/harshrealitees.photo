---
import "../styles/global.css";
const { title = "My Photography", class: className = "" } = Astro.props;
const isHomePage = Astro.url.pathname === "/";
const isEssayPage = Astro.url.pathname.startsWith("/essays/");
const pageTitle = isHomePage ? "Harsh Realitees Photography" : `${title} | Harsh Realitees`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Snipcart CSS -->
    <link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.2.0/default/snipcart.css" />
  </head>

  <body class={`bg-black text-white ${isHomePage ? 'relative h-screen overflow-hidden' : isEssayPage ? 'relative h-screen overflow-hidden' : 'min-h-screen flex flex-col'}`}>
    <!-- HEADER -->
    <header class="fixed top-0 left-0 w-full z-50">
      <div class="px-8 py-6 flex justify-between items-center">
        <!-- Title -->
        <a
          href="/"
          class="font-title text-2xl tracking-wide hover:opacity-70"
        >
          Harsh Realitees Photography
        </a>

        <!-- Nav -->
        <nav class="font-body text-xs uppercase tracking-[0.25em] flex gap-8 items-center">
          <a href="/gallery" class="hover:opacity-60">Gallery</a>
          <a href="/essays" class="hover:opacity-60">Essays</a>
          <a href="/videos" class="hover:opacity-60">Videos</a>
          <a href="/store" class="hover:opacity-60">Store</a>
          <a href="/contact" class="hover:opacity-60">Contact</a>
          <!-- Cart Button -->
          <button class="snipcart-checkout hover:opacity-60 cursor-pointer text-xs uppercase tracking-[0.25em]">
            Cart (<span class="snipcart-items-count">0</span>)
          </button>
        </nav>
      </div>
    </header>

    <!-- MAIN -->
    <main class={`${isEssayPage ? 'pt-24 pb-20' : 'pt-24'} ${isHomePage ? className : isEssayPage ? 'h-[calc(100vh-12rem)]' : 'flex-grow'}`}> <!-- padding top to offset fixed header -->
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class={`text-center py-8 text-gray-500 text-sm ${isHomePage ? 'fixed bottom-0 left-0 right-0 z-40' : isEssayPage ? 'fixed bottom-0 left-0 right-0 z-40' : 'mt-auto'}`}>
      Â© 2025 Harsh Deshpande. All rights reserved
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
    <!-- Snipcart JS -->
    <script async src="https://cdn.snipcart.com/themes/v3.2.0/default/snipcart.js"></script>
    <div hidden id="snipcart" data-api-key="YOUR_SNIPCART_API_KEY" data-config-modal-style="side"></div>
    
    <script>
      // Prevent hash navigation from Snipcart
      window.addEventListener('load', function() {
        // Remove hash from URL if it's a cart-related hash
        if (window.location.hash && (window.location.hash === '#/cart' || window.location.hash.startsWith('#/cart'))) {
          history.replaceState(null, null, window.location.pathname + window.location.search);
        }
        
        // Monitor and remove hash changes
        window.addEventListener('hashchange', function() {
          if (window.location.hash && (window.location.hash === '#/cart' || window.location.hash.startsWith('#/cart'))) {
            history.replaceState(null, null, window.location.pathname + window.location.search);
          }
        });
        
        // Also monitor popstate for browser back/forward
        window.addEventListener('popstate', function() {
          if (window.location.hash && (window.location.hash === '#/cart' || window.location.hash.startsWith('#/cart'))) {
            history.replaceState(null, null, window.location.pathname + window.location.search);
          }
        });
      });
    </script>
  </body>
</html>