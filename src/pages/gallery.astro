---
import BaseLayout from "../layouts/BaseLayout.astro";
import Gallery from "../components/Gallery.astro";
import { galleryCollections } from "../data/gallery.js";
---

<BaseLayout title="Gallery">
  <h1 class="text-3xl mb-8">Gallery Collections</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
    {galleryCollections.map((collection) => (
      <a 
        href={`/gallery/${collection.id}`}
        class="block p-6 border border-gray-800 rounded-lg hover:border-gray-600 transition-colors cursor-pointer"
        style="text-decoration: none;"
      >
        <h2 class="text-xl mb-2">{collection.title}</h2>
        <p class="text-gray-400 text-sm mb-4">{collection.description}</p>
        <p class="text-gray-500 text-xs">{collection.images.length} photos</p>
      </a>
    ))}
  </div>
  <div class="mb-8">
    <h2 class="text-2xl mb-4">All Photos</h2>
  </div>
  <Gallery />
</BaseLayout>