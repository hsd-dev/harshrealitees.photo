---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Contact">
  <h1></h1>
  <p>I'd love to hear from you. Reach out via email or follow me on social media.</p>

  <!-- Contact form (placeholder) -->
  <form class="flex flex-col gap-4 mt-6 max-w-md">
    <input 
      type="text" 
      name="name" 
      placeholder="Your Name" 
      required
      class="p-3 rounded-md border border-gray-700 bg-gray-900 text-white focus:outline-none focus:border-gray-500"
    />
    <input 
      type="email" 
      name="email" 
      placeholder="Your Email" 
      required
      class="p-3 rounded-md border border-gray-700 bg-gray-900 text-white focus:outline-none focus:border-gray-500"
    />
    <textarea 
      name="message" 
      placeholder="Your Message" 
      rows="6" 
      required
      class="p-3 rounded-md border border-gray-700 bg-gray-900 text-white focus:outline-none focus:border-gray-500 resize-none"
    ></textarea>
    <button 
      type="submit"
      class="p-3 px-6 rounded-md border-none bg-black text-white cursor-pointer transition-colors hover:bg-gray-900"
    >
      Send Message
    </button>
  </form>

  <!-- Optional: social links -->
  <div class="mt-8">
    <h2>Find me online</h2>
    <ul class="list-none p-0 flex gap-4">
      <li><a href="https://instagram.com/yourusername" target="_blank">Instagram</a></li>
      <li><a href="https://twitter.com/yourusername" target="_blank">Twitter</a></li>
      <li><a href="mailto:youremail@example.com">Email</a></li>
    </ul>
  </div>
</BaseLayout>
