---
import { getEntry } from 'astro:content';

import BaseLayout from "../layouts/BaseLayout.astro";
import Gallery from "../components/Gallery.astro";
import HeroCarousel from '../components/HeroCarousel.astro';

import { galleryImages } from "../data/gallery.js"; // reuse the array

const featuredEssay = await getEntry("essays", "first-walk");
---
<BaseLayout title="Harsh Realitees Photography" class="w-full h-screen overflow-hidden relative">
  <HeroCarousel />

  <section class="max-w-4xl mx-auto px-6">
    <h2 class="text-xs uppercase tracking-[0.25em] mb-12 text-gray-400">
      Featured Photo Essay
    </h2>

    <div class="space-y-16">
      <a href={`/essays/${featuredEssay.id}`} class="block group">    
        {featuredEssay.data.cover && (
          <div class="relative w-full h-48">
            <img 
              src={featuredEssay.data.cover} 
              alt={featuredEssay.data.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110 opacity-60 group-hover:opacity-80"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
          </div>
        )}
        <div class="p-6">
          <h3 class="text-lg font-light mb-3 text-white group-hover:text-gray-100 transition-colors tracking-wide uppercase">
            {featuredEssay.data.title}
          </h3>
          <p class="text-gray-400 text-xs mb-4 line-clamp-2 leading-relaxed tracking-wide">
            {featuredEssay.data.description}
          </p>
          <div class="flex items-center justify-between pt-3 border-t border-gray-800">
            <span class="text-gray-600 group-hover:text-gray-400 transition-colors text-xs tracking-[0.15em] uppercase">
              View â†’
            </span>
          </div>
        </div>
      </a>
    </div>
  </section>
</BaseLayout>
